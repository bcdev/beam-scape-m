                    <defaultWeightCoeff>1.0</defaultWeightCoeff>
                </outputVariable>
                <outputVariable>
                    <name>AOT_550</name>
                    <defaultAggregator>AVG</defaultAggregator>
                    <defaultWeightCoeff>1.0</defaultWeightCoeff>
                </outputVariable>

                <outputVariable>
                    <name>l1_flags</name>
